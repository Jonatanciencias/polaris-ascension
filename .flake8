# ==============================================================================
# Flake8 Configuration
# ==============================================================================
# Configuración para linting de código Python (PEP8 compliance)
# ==============================================================================

[flake8]
# Maximum line length
max-line-length = 100

# Maximum McCabe complexity
max-complexity = 12

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    .mypy_cache,
    migrations

# Ignore specific errors/warnings
ignore =
    E203,
    E266,
    E501,
    W503,
    W504,
    E402,
    E731,

# Select specific checks to run
select =
    E,
    W,
    F,
    C,
    B,
    I,

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/*:S101,F401,F811

# Show source code for each error
show-source = True

# Show statistics
statistics = True

# Count errors
count = True
